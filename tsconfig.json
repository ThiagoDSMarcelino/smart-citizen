{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es2020",
    "lib": ["es2020"],
    "types": ["reflect-metadata"],

    "outDir": "./dist",
    "rootDir": "./src",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
